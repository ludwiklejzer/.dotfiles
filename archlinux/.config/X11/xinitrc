~/.fehbg &                          # set background
picom &                             # compositor
ibus-daemon -drxR &                 # keyboard input manager
dunst &                             # notification daemon
setxkbmap -option caps:swapescape & # change esc by capslock
redshift &                          # screen color temperature
xsetroot -cursor_name left_ptr &    # set cursor type
unclutter &                         # hide mouse
deluged &                           # torrent client

exec bspwm                          # window manager
